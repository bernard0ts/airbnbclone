<div class="flex items-center justify-center h-screen">
  <div class="w-full max-w-xs">
    <div class="bg-white shadow-lg rounded px-8 pt-6 pb-8 mb-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="text-2xl font-bold mb-4">Login</h2>
        <!-- Email input -->
        <div class="form-outline mb-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="grid grid-cols-2 gap-4 mb-4">
          <!-- Checkbox and Remember Me -->
          <div class="form-check flex items-center">
            <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "form-check-input" } %>
          </div>

          <!-- Submit button and Links -->
          <div class="form-actions col-span-2 flex justify-between items-center flex-wrap mt-4">
            <%= f.button :submit, "Log in", class: "btn btn-outline-primary" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>